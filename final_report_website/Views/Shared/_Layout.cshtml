                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("112動態網頁設計期末報告_周刊", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
